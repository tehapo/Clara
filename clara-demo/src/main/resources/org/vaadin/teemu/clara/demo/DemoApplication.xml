<HorizontalSplitPanel xmlns:demo="urn:import:org.vaadin.teemu.clara.demo" xmlns:l="urn:vaadin:parent">

	<!-- Left side: the editor -->
	<HorizontalLayout margin="true" spacing="true" sizeFull="">
		<demo:ClaraLogoEmbedded />
		<CssLayout id="editor" sizeFull="" margin="false false true true" l:expandRatio="1.0">
			<Label id="statusLabel" styleName="status" />
			<TextArea id="xmlArea" styleName="xml-area" caption="XML" width="100%" textChangeTimeout="500" />
		</CssLayout>
	</HorizontalLayout>

	<!-- Right side: the result panel -->
	<VerticalLayout margin="true" sizeFull="">
	    <Panel id="resultPanel" caption="Result" styleName="result" sizeFull="" />
	</VerticalLayout>
	
</HorizontalSplitPanel>